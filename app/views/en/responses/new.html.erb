      <section id='first' class="wrapper style1 align-center">
        <div class="inner">
          <h2>Reply</h2>
          <p>Important : Fill in a form for each invitee!</p>
          <p>This being an all-adult event, childcare will not be available.<br>
         Please do not hesitate to contact us should you have any questions or concerns: <b><a href='mailto:mariage@oliviaetpierre.com'>mariage@oliviaetpierre.com</a></b></p>
          <div class="index align-left">

            <section>
              <header>
                <h3>Form</h3>
              </header>
              <div class="content">

                <%= simple_form_for @response, url: '/en/responses', input_html: { class: "fields"}, method: 'post' do |f| %>
                  <%= f.error_notification %>
                  <div class='fields'>
                    <div class='field half'>
                      <%= f.input :first_name, label: 'First name' %>
                      <div style='color: red;' class=<%= @error %> >*Ce champ est obligatoire</div>
                    </div>
                    <div class='field half'>
                      <%= f.input :last_name, label: 'Surname' %>
                      <div style='color: red;' class=<%= @error %> >*Ce champ est obligatoire</div>
                    </div>
                    <div class='field'>
                      <%= f.input :email, label:'Email address' %>
                      <div style='color: red;' class=<%= @error %> >*Ce champ est obligatoire</div>
                    </div>
                    <div class='field'>
                      <%= f.input :presence, collection: ["I will attend this event!", "To my regret, I will not be able to attend."], label:'Reply', include_blank: false %>
                      <div style='color: red;' class=<%= @error %> >*Ce champ est obligatoire</div>
                    </div>
                    <div class='field'>
                      <%= f.input :allergies, as: :text, label:'Allergies' , input_html: { rows: 1 } %>
                    </div>
                    <div class='field'>
                      <%= f.input :note, as: :text, label:'A message for the newlyweds-to-be?' , input_html: { rows: 1 } %>
                    </div>
                      <%= f.input :language, as: :hidden, input_html: { value: 'EN' } %>
                  </div>
                  <div class='actions'>
                    <%= f.button :submit, value: 'Send!', id: 'submit-btn', class: "button primary" %>
                  </div>
                <% end %>

              </div>
            </section>
          </div>
        </div>
      </section>
  </div>

  <div class='pop-position'>
    <%= render partial: 'shared/enpopup' =%>
  </div>

