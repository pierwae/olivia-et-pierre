  <div id="wrapper" class="divided">

    <!-- Banner -->
      <section class="flex-custom2 banner onload-image-fade-in onload-content-fade-right - style2 fullscreen orient-center content-align-center image-position-center color-add-1" style='padding-top: 0;'>
        <div class='custom-header'>
          <a class='flag' href="/fiesta">
